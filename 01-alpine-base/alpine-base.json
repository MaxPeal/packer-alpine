{
"min_packer_version": "1.3.4",
  "variables": {
    "box_version": "3.9.4",
	"box_src_name_prefix": "TMP-",
	"box_src_name_suffix": "alpine-clean",
	"box_name_prefix": "TMP-",
	"box_name": "alpine-base",
	"box_build_name": "{{ user `box_name_prefix`}}{{ user `box_name`}}",
    "___src_name": "alpine-clean",
    "box_src_name": "{{ user `box_src_name_prefix`}}{{ user `box_src_name_suffix`}}",
    "name": "alpine-base",
    "version": "3.9.4",
    "headless": "false",
	"provisioners-breakpoint-disable": "true",
	"___provisioners-breakpoint-disable": "false",
    "memory": "512",
    "cpus": "1",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "90s",
	"___ssh_wait_timeout": "1800s",
	"___boot_wait": "30s",
	"boot_wait": "12s",
    "out_dir": "../output-box",
    "box_source_path": "../00-iso-install/output-virtualbox-iso",
    "___shutdown_command": "poweroff",
	"shutdown_command": "/sbin/poweroff"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "{{user `box_source_path`}}/{{user `box_src_name`}}-{{user `version`}}.ovf",
      "virtualbox_version_file": ".vbox_version",
      "boot_wait": "{{user `boot_wait`}}",
      "vm_name": "{{ user `box_build_name`}}-{{user `box_version`}}",
      "guest_additions_mode": "disable",
      "headless": "{{user `headless`}}",
      "ssh_username": "root",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],
      "cd_files": ["./cd_files_dir/*"],
      "cd_label": "cidata"
    }
  ],
  "provisioners": [
  {	"type": "breakpoint",	"disable": "{{user `provisioners-breakpoint-disable`}}",	"note": "provisioners breakpoint"	},
    {
      "type": "shell",
      "environment_vars": [
        "http_proxy={{user `proxy`}}",
		"PATH=$PATH:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
      ],
	  "use_env_var_file": "true",
      "execute_command": "/bin/sh -x '{{.Path}}'",
      "scripts": [
        "scripts/00-apk.sh",
        "scripts/01-sshd.sh",
        "scripts/02-vagrant.sh",
        "scripts/03-sudo.sh",
        "scripts/05-install-virtualbox-guest-additions.sh",
        "scripts/98-cleanup.sh",
        "scripts/99-minimize.sh"
      ]
    }
  ],
  "post-processors": [
  {
    "type": "vagrant",
    "compression_level": 6,
    "keep_input_artifact": false,
    "output": "{{user `out_dir`}}/{{user `name`}}-{{user `version`}}_{{.Provider}}.box"
  },
  {
    "type": "vagrant",
    "compression_level": 6,
    "keep_input_artifact": false,
    "output": "{{user `out_dir`}}/packer_{{.BuildName}}_{{.Provider}}.box"
  }
  ]
}
